package decisao;

import javax.swing.JOptionPane;

public class Exercicio1 {

	public static void main(String[] args) {
	
	String op = JOptionPane.showInputDialog("Digite uma operação matematica");
	
	float numero1 = Float.parseFloat(JOptionPane.showInputDialog("Digite primeiro número"));
		
	float numero2 = Float.parseFloat(JOptionPane.showInputDialog("Digite segundo número"));
	
	if (op != "/" && numero2 != 0)
		System.out.print("Resultado: " + numero1 + op + numero2);
	else
		System.out.print("Erro, divisão por 0");
		
	
	
	}

}
