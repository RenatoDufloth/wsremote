package br.com.xpto.modelo;

public class Televisao {
	
	private String marca;
	private float valorVenda;
	private float valorCompra;
	private int volume;
	private int canal;
	private boolean status;
	
	public void preencherMarca(String pMarca) {
		marca = pMarca;
	}
	public void preencherValorCompra(float pValor) {
		valorCompra = pValor;
	}
	public String definirValorVenda() {
		valorVenda = valorCompra *(float) 1.2;
		return "Valor de venda: R$" + valorVenda;
	}
	public void ligar() {
		status = true;		
	}
	public void desligar() {
		status = false;		
	}
	public String retornarStatus() {
		if (status == true)
			return "Ligada";
		else
			return "Desligada";
		
	}
	public void aumentarVolume() {
		if(volume <= 20) {
			volume = volume + 1;
		}
		else
		 System.out.println("Volume maximo 20");
			
	}
	public void diminuirVolume() {
		if(volume != 0 ) {
			volume = volume -1;
		}
		else
			System.out.println("Já no volume minimo 0");
	}
	public void mudarCanal(int pCanal){
		if(status == true) {
			if (pCanal > 999 || pCanal < 0)
				System.out.println("Informar canal valido");
			else
				canal = pCanal;
		}
		else
			System.out.println("TV está deligada");
			
	}
	public String retornarResumo() {
		return
				"Status: " + status + "\n" +
				"Canal: " + canal + "\n" +
				"Volume: " + volume + "\n" +
				"Valor da Venda: " + valorVenda + "\n" +
				"valor da Compra: " + valorCompra;
			
	}
	

	
	
	
	
	
	
	
	
}
