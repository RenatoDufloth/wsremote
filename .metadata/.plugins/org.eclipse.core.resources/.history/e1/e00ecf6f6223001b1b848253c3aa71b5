package decisao;

import javax.swing.JOptionPane;

public class DesafioEncadeada {

	public static void main(String[] args) {
	
		String nome = JOptionPane.showInputDialog("Nome");
		
		short alfab = Short.parseShort(JOptionPane.showInputDialog("Alfabetizado? Digite 1 para sim e 0 para não"));
		
		if (alfab == 1) {
		
			int idade = Integer.parseInt(JOptionPane.showInputDialog("Idade"));
		
			if (idade >= 70 || (idade >= 16 && idade <= 17))
				System.out.printf("%s seu voto é facultativo", nome);
			if (idade >= 18 && idade < 70)
				System.out.printf("%s seu voto é obrigatorio", nome);
			if (idade < 16)
				System.out.printf("%s você ainda não pode votar", nome);
		
		}
		
		else 
			System.out.printf("%s você não pode votar por não ser alfabetizado", nome);
	}

}
